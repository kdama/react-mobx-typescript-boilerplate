{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "paths": {
      "app/*": ["./app/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules"]
}
